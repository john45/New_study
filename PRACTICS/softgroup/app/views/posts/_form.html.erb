<div class="row form">
  <%= form_for @post, html: { style: "display: #{hidden ? 'none' : 'block'}"}, multipart: true, remote: true do |f| %>
    <ul>
        <li><%= f.fields_for :picture do |picture_fields| %></li>
          <li><%= picture_fields.label :picture %></li>
          <li><%= picture_fields.file_field :picture %></li>
        <% end %>
      <li><%= f.label :title, "Title" %></li>
      <li><%= f.text_field :title, class: 'form-control form_post_title' %></li>
      <li><%= f.label :body, "Body" %></li>
      <li><%= f.hidden_field :user_id %></li>
      <li id="<%= @post.id %>"><%= f.cktext_area :body, cols: 40, ckeditor: { uiColor: '#AADC6E', toolbar: 'mini', id: @post.id } %>
      <p><li><%= f.submit class:'btn btn-success' %></li></p>
    </ul>
  <% end %>
</div>
